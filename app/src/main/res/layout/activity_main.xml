<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/GoToCalc"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="Calculator"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/GoToPlayer"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="Media player"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/GoToGeo"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="Geo control"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/GoToMobileData"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="Mobile Network Data"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/GoToSockets"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="ZMQ / Sockets"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/GoToMobileJson"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="Mobile JSON"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded"
            android:textColor="#FFFFFF"/>


    </LinearLayout>

</LinearLayout>
